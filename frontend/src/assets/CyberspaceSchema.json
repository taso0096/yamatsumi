{
  "$schema": "http://json-schema.org/draft-07/schema",
  "version": "0.1.14",
  "type": "object",
  "required": [
    "id",
    "layers"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "title": "サイバー空間ID",
      "description": "サイバー空間ID",
      "type": ["integer", "string"],
      "pattern": "^[a-zA-Z0-9_-]+$",
      "examples": [
        "example_network"
      ]
    },
    "label": {
      "title": "サイバー空間表示名",
      "description": "サイバー空間表示名",
      "type": "string",
      "examples": [
        "Example Network"
      ]
    },
    "desc": {
      "title": "説明",
      "description": "サイバー空間の説明",
      "type": "string",
      "examples": [
        "This is an example of a network."
      ]
    },
    "scoresUrl": {
      "title": "スコアURL",
      "description": "演習システム側のスコア一覧API",
      "type": "string",
      "examples": [
        "http://localhost:8080/scores"
      ]
    },
    "questionsUrl": {
      "title": "問題URL",
      "description": "演習システム側の問題一覧API",
      "type": "string",
      "examples": [
        "http://localhost:8080/questions"
      ]
    },
    "userRoutingUrl": {
      "title": "ユーザIP一覧URL",
      "description": "演習システム側のユーザIP一覧API",
      "type": "string",
      "examples": [
        "http://localhost:8080/ipaddresses"
      ]
    },
    "version": {
      "title": "バージョン",
      "description": "ネットワークのバージョン",
      "type": ["integer", "string"],
      "examples": [
        "0.0.1"
      ]
    },
    "routingTable": {
      "title": "ルーティングテーブル",
      "description": "ルーティングテーブル",
      "type": "object",
      "patternProperties": {
        ".+": {
          "title": "IPアドレス",
          "description": "IPアドレス",
          "type": "array",
          "items": {
            "type": "string",
            "examples": [
              "192.168.1.1"
            ]
          }
        }
      }
    },
    "layers": {
      "title": "レイヤー",
      "description": "ネットワークのレイヤー",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [
          "id",
          "nodes"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "title": "レイヤーID",
            "description": "レイヤーID",
            "type": ["integer", "string"],
            "pattern": "^[a-zA-Z0-9_-]+$",
            "examples": [
              "layer_1"
            ]
          },
          "label": {
            "title": "レイヤー表示名",
            "description": "レイヤー表示名",
            "type": "string",
            "examples": [
              "Layer-1"
            ]
          },
          "depth": {
            "title": "深度",
            "description": "一つ上のレイヤーからの深度",
            "type": ["number", "string"],
            "default": 1,
            "examples": [
              1
            ]
          },
          "fixedDepth": {
            "title": "絶対深度",
            "description": "一番上のレイヤーからの深度",
            "type": ["number", "string"]
          },
          "layoutOptions": {
            "$id": "layoutOptions",
            "title": "配置オプション",
            "description": "レイヤー内のノード（グループ）の配置",
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "shape": {
                "title": "レイヤー表示形式",
                "description": "レイヤー表示形式",
                "type": "string",
                "enum": [
                  "circle",
                  "square"
                ],
                "default": "circle",
                "examples": [
                  "square"
                ]
              },
              "scale": {
                "title": "倍率",
                "description": "ノード数依存の半径や1辺の長さに掛ける倍率",
                "type": ["number", "string"],
                "minimum": 0,
                "default": 1,
                "examples": [
                  1
                ]
              },
              "fixedDistance": {
                "title": "絶対距離",
                "description": "半径または1辺の長さ(ノード数に依存しない固定値)",
                "type": ["number", "string"],
                "minimum": 0,
                "examples": [
                  1
                ]
              }
            }
          },
          "nodes": {
            "$id": "nodeObject",
            "title": "ノード",
            "description": "レイヤー(グループ)内のノード",
            "type": "array",
            "additionalItems": false,
            "items": {
              "type": "object",
              "required": [
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "id": {
                  "title": "ノードID",
                  "description": "ノードID",
                  "type": ["integer", "string"],
                  "pattern": "^[a-zA-Z0-9_-]+$",
                  "examples": [
                    "server_a"
                  ]
                },
                "label": {
                  "title": "ノード表示名",
                  "description": "ノード表示名",
                  "type": "string",
                  "examples": [
                    "Server-A"
                  ]
                },
                "nodeOptions": {
                  "title": "ノードオプション",
                  "description": "ノードオプション",
                  "type": "object",
                  "additionalProperties": true,
                  "properties": {
                    "type": {
                      "title": "ノード種類",
                      "description": "ノード種類",
                      "type": "string",
                      "enum": [
                        "sphere",
                        "server",
                        "switch",
                        "router",
                        "desktop",
                        "laptop",
                        "internet",
                        "intranet",
                        "user",
                        "team",
                        "question"
                      ],
                      "default": "sphere",
                      "examples": [
                        "server"
                      ]
                    },
                    "size": {
                      "title": "ノードサイズ",
                      "description": "ノードサイズ",
                      "type": ["number", "string"],
                      "minimum": 0,
                      "default": 1,
                      "examples": [
                        1
                      ]
                    },
                    "nodeColor": {
                      "title": "ノード色",
                      "description": "ノード色",
                      "type": "string",
                      "default": "#fff",
                      "examples": [
                        "#fff"
                      ]
                    },
                    "labelColor": {
                      "title": "ノードラベル色",
                      "description": "ノードラベル色",
                      "type": "string",
                      "default": "#fff",
                      "examples": [
                        "#fff"
                      ]
                    }
                  },
                  "if": {
                    "properties": {
                      "type": {
                        "const": "user"
                      }
                    }
                  },
                  "then": {
                    "required": [
                      "users"
                    ],
                    "properties": {
                      "users": {
                        "title": "ユーザID",
                          "description": "ユーザID",
                          "type": "array",
                          "additionalItems": false,
                          "items": {
                            "type": ["string", "integer"]
                          }
                      },
                      "layoutOptions": {
                        "$ref": "layoutOptions"
                      },
                      "levels": {
                        "type": "null"
                      },
                      "categories": {
                        "type": "null"
                      }
                    }
                  },
                  "else": {
                    "properties": {
                      "users": {
                        "type": "null"
                      }
                    },
                    "if": {
                      "properties": {
                        "type": {
                          "const": "question"
                        }
                      }
                    },
                    "then": {
                      "required": [
                        "levels",
                        "categories"
                      ],
                      "properties": {
                        "levels": {
                          "title": "レベルID",
                            "description": "表示するレベルID一覧",
                            "type": "array",
                            "additionalItems": false,
                            "items": {
                              "type": ["string", "integer"]
                            }
                        },
                        "categories": {
                          "title": "カテゴリID",
                            "description": "表示するカテゴリID一覧",
                            "type": "array",
                            "additionalItems": false,
                            "items": {
                              "type": ["string", "integer"]
                            }
                        },
                        "layoutOptions": {
                          "$ref": "layoutOptions"
                        }
                      }
                    },
                    "else": {
                      "properties": {
                        "levels": {
                          "type": "null"
                        },
                        "categories": {
                          "type": "null"
                        }
                      }
                    }
                  }
                },
                "parentId": {
                  "title": "親ノードID",
                  "description": "親ノードID",
                  "type": ["integer", "string"],
                  "examples": [
                    "router_a"
                  ]
                },
                "layoutOptions": {
                  "$ref": "layoutOptions"
                },
                "nodes": {
                  "$ref": "nodeObject"
                }
              }
            }
          }
        }
      }
    }
  }
}

