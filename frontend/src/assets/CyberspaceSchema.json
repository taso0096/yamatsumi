{
  "$schema": "http://json-schema.org/draft-07/schema",
  "version": "0.1.23",
  "type": "object",
  "required": [
    "id",
    "layers"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "title": "サイバー空間ID",
      "description": "サイバー空間ID",
      "type": ["integer", "string"],
      "pattern": "^[a-zA-Z0-9_-]+$",
      "examples": [
        "example_network"
      ]
    },
    "label": {
      "title": "サイバー空間表示名",
      "description": "サイバー空間表示名",
      "type": "string",
      "examples": [
        "Example Network"
      ]
    },
    "desc": {
      "title": "説明",
      "description": "サイバー空間の説明",
      "type": "string",
      "examples": [
        "This is an example of a network."
      ]
    },
    "scoresUrl": {
      "title": "スコアURL",
      "description": "演習システム側のスコア一覧API",
      "type": "string",
      "examples": [
        "http://localhost:8080/scores"
      ]
    },
    "questionsUrl": {
      "title": "問題URL",
      "description": "演習システム側の問題一覧API",
      "type": "string",
      "examples": [
        "http://localhost:8080/questions"
      ]
    },
    "userRoutingUrl": {
      "title": "ユーザIP一覧URL",
      "description": "演習システム側のユーザIP一覧API",
      "type": "string",
      "examples": [
        "http://localhost:8080/ipaddresses"
      ]
    },
    "extraUrl": {
      "title": "追加データURL",
      "description": "演習システム側の追加データAPI",
      "type": "string",
      "examples": [
        "http://localhost:8080/extra"
      ]
    },
    "version": {
      "title": "バージョン",
      "description": "サイバー空間のバージョン",
      "type": ["integer", "string"],
      "examples": [
        "0.0.1"
      ]
    },
    "routingTable": {
      "title": "ルーティングテーブル",
      "description": "ルーティングテーブル",
      "type": "object",
      "patternProperties": {
        ".+": {
          "title": "IPアドレス",
          "description": "IPアドレス",
          "type": "array",
          "items": {
            "type": "string",
            "examples": [
              "192.168.1.1"
            ]
          }
        }
      }
    },
    "options": {
      "title": "オプション",
      "description": "サイバー空間のオプション",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "position": {
          "$id": "position",
          "title": "座標",
          "description": "座標",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "x": {
              "title": "x",
              "description": "x",
              "type": ["number", "string"],
              "default": 0,
              "examples": [
                0
              ]
            },
            "y": {
              "title": "y",
              "description": "y",
              "type": ["number", "string"],
              "default": 0,
              "examples": [
                0
              ]
            },
            "z": {
              "title": "z",
              "description": "z",
              "type": ["number", "string"],
              "default": 0,
              "examples": [
                0
              ]
            }
          }
        },
        "rotation": {
          "$id": "rotation",
          "title": "角度",
          "description": "角度",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "x": {
              "title": "x",
              "description": "x",
              "type": ["number", "string"],
              "default": 0,
              "examples": [
                0
              ]
            },
            "y": {
              "title": "y",
              "description": "y",
              "type": ["number", "string"],
              "default": 0,
              "examples": [
                0
              ]
            },
            "z": {
              "title": "z",
              "description": "z",
              "type": ["number", "string"],
              "default": 0,
              "examples": [
                0
              ]
            }
          }
        },
        "animation": {
          "$id": "animation",
          "title": "アニメーション",
          "description": "アニメーション",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "to": {
              "title": "回転角度",
              "description": "回転角度",
              "type": "string",
              "default": "0 0 0",
              "examples": [
                "0 360 0"
              ]
            },
            "duration": {
              "title": "回転時間",
              "description": "1サイクルの回転時間",
              "type": ["number", "string"],
              "default": 200000,
              "examples": [
                200000
              ]
            }
          }
        }
      }
    },
    "layers": {
      "title": "レイヤー",
      "description": "ネットワークのレイヤー",
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [
          "id",
          "nodes"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "title": "レイヤーID",
            "description": "レイヤーID",
            "type": ["integer", "string"],
            "pattern": "^[a-zA-Z0-9_-]+$",
            "examples": [
              "layer_1"
            ]
          },
          "label": {
            "title": "レイヤー表示名",
            "description": "レイヤー表示名",
            "type": "string",
            "examples": [
              "Layer-1"
            ]
          },
          "depth": {
            "title": "深度",
            "description": "一つ上のレイヤーからの深度",
            "type": ["number", "string"],
            "default": 1,
            "examples": [
              1
            ]
          },
          "fixedDepth": {
            "title": "絶対深度",
            "description": "一番上のレイヤーからの深度",
            "type": ["number", "string"]
          },
          "position": {
            "$ref": "position"
          },
          "rotation": {
            "$ref": "rotation"
          },
          "animation": {
            "$ref": "animation"
          },
          "layoutOptions": {
            "$id": "layoutOptions",
            "title": "配置オプション",
            "description": "レイヤー内のノード（グループ）の配置",
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "shape": {
                "title": "レイヤー表示形式",
                "description": "レイヤー表示形式",
                "type": "string",
                "enum": [
                  "circle",
                  "square",
                  "sphere"
                ],
                "default": "circle",
                "examples": [
                  "square"
                ]
              },
              "scale": {
                "title": "倍率",
                "description": "ノード数依存の半径や1辺の長さに掛ける倍率",
                "type": ["number", "string"],
                "minimum": 0,
                "default": 1,
                "examples": [
                  1
                ]
              },
              "fixedDistance": {
                "title": "絶対距離",
                "description": "半径または1辺の長さ(ノード数に依存しない固定値)",
                "type": ["number", "string"],
                "minimum": 0,
                "examples": [
                  1
                ]
              },
              "rowCount": {
                "title": "行数",
                "description": "行数",
                "type": ["number", "string"],
                "minimum": 0,
                "examples": [
                  2
                ]
              }
            }
          },
          "nodes": {
            "$id": "nodeObject",
            "title": "ノード",
            "description": "レイヤー(グループ)内のノード",
            "type": "array",
            "additionalItems": false,
            "items": {
              "type": "object",
              "required": [
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "id": {
                  "title": "ノードID",
                  "description": "ノードID",
                  "type": ["integer", "string"],
                  "pattern": "^[a-zA-Z0-9_-]+$",
                  "examples": [
                    "server_a"
                  ]
                },
                "label": {
                  "title": "ノード表示名",
                  "description": "ノード表示名",
                  "type": "string",
                  "examples": [
                    "Server-A"
                  ]
                },
                "nodeOptions": {
                  "title": "ノードオプション",
                  "description": "ノードオプション",
                  "type": "object",
                  "additionalProperties": true,
                  "properties": {
                    "type": {
                      "title": "ノード種類",
                      "description": "ノード種類",
                      "type": "string",
                      "enum": [
                        "(default)",
                        "internet",
                        "intranet",
                        "user",
                        "team",
                        "question",
                        "spacer",
                        "timer",
                        "ranking"
                      ],
                      "default": "(default)",
                      "examples": [
                        "(default)"
                      ]
                    },
                    "shape": {
                      "title": "ノード形状",
                      "description": "ノード形状",
                      "type": "string",
                      "enum": [
                        "sphere",
                        "polyhedron",
                        "ring",
                        "circle",
                        "polygon",
                        "server",
                        "switch",
                        "router",
                        "desktop",
                        "laptop",
                        "text"
                      ],
                      "default": "sphere",
                      "examples": [
                        "sphere"
                      ]
                    },
                    "topLabel": {
                      "title": "上部ラベル",
                      "description": "上部ラベル",
                      "type": "string",
                      "enum": [
                        "(none)",
                        "node_label",
                        "details_label",
                        "score"
                      ],
                      "default": "(none)",
                      "examples": [
                        "(none)"
                      ]
                    },
                    "centerLabel": {
                      "title": "中部ラベル",
                      "description": "中部ラベル",
                      "type": "string",
                      "enum": [
                        "(none)",
                        "node_label",
                        "details_label",
                        "score"
                      ],
                      "default": "(none)",
                      "examples": [
                        "(none)"
                      ]
                    },
                    "bottomLabel": {
                      "title": "下部ラベル",
                      "description": "下部ラベル",
                      "type": "string",
                      "enum": [
                        "(none)",
                        "node_label",
                        "details_label",
                        "score"
                      ],
                      "default": "node_label",
                      "examples": [
                        "node_label"
                      ]
                    },
                    "size": {
                      "title": "ノードサイズ",
                      "description": "ノードサイズ",
                      "type": ["number", "string"],
                      "minimum": 0,
                      "default": 1,
                      "examples": [
                        1
                      ]
                    },
                    "fontSize": {
                      "title": "フォントサイズ",
                      "description": "フォントサイズ",
                      "type": ["number", "string"],
                      "minimum": 0,
                      "default": 1,
                      "examples": [
                        1
                      ]
                    },
                    "nodeColor": {
                      "title": "ノード色",
                      "description": "ノード色",
                      "type": "string",
                      "default": "#fff",
                      "examples": [
                        "#fff"
                      ]
                    },
                    "labelColor": {
                      "title": "ノードラベル色",
                      "description": "ノードラベル色",
                      "type": "string",
                      "default": "#fff",
                      "examples": [
                        "#fff"
                      ]
                    },
                    "facesNumber": {
                      "title": "面の数",
                      "description": "面の数",
                      "type": "integer",
                      "enum": [
                        4,
                        6,
                        8,
                        12,
                        20
                      ],
                      "default": 6,
                      "examples": [
                        6
                      ]
                    },
                    "polygonalNumber": {
                      "title": "多角数",
                      "description": "多角数",
                      "type": ["integer", "string"],
                      "default": 4,
                      "examples": [
                        4
                      ]
                    },
                    "wireframe": {
                      "title": "ワイヤーフレーム",
                      "description": "ワイヤーフレーム",
                      "type": "boolean",
                      "default": false,
                      "examples": [
                        false
                      ]
                    },
                    "opacity": {
                      "title": "透明度",
                      "description": "透明度",
                      "type": ["number", "string"],
                      "minimum": 0,
                      "maximum": 1,
                      "default": 1,
                      "examples": [
                        1
                      ]
                    },
                    "position": {
                      "$ref": "position"
                    },
                    "rotation": {
                      "$ref": "rotation"
                    },
                    "animation": {
                      "$ref": "animation"
                    }
                  },
                  "if": {
                    "properties": {
                      "type": {
                        "const": "user"
                      }
                    }
                  },
                  "then": {
                    "properties": {
                      "users": {
                        "title": "ユーザID",
                          "description": "ユーザID",
                          "type": "array",
                          "additionalItems": false,
                          "items": {
                            "type": ["string", "integer"]
                          }
                      },
                      "layoutOptions": {
                        "$ref": "layoutOptions"
                      },
                      "levels": {
                        "type": "null"
                      },
                      "categories": {
                        "type": "null"
                      }
                    }
                  },
                  "else": {
                    "properties": {
                      "users": {
                        "type": "null"
                      }
                    },
                    "if": {
                      "properties": {
                        "type": {
                          "const": "question"
                        }
                      }
                    },
                    "then": {
                      "required": [
                        "levels",
                        "categories"
                      ],
                      "properties": {
                        "levels": {
                          "title": "レベルID",
                            "description": "表示するレベルID一覧",
                            "type": "array",
                            "additionalItems": false,
                            "items": {
                              "type": ["string", "integer"]
                            }
                        },
                        "categories": {
                          "title": "カテゴリID",
                            "description": "表示するカテゴリID一覧",
                            "type": "array",
                            "additionalItems": false,
                            "items": {
                              "type": ["string", "integer"]
                            }
                        },
                        "layoutOptions": {
                          "$ref": "layoutOptions"
                        }
                      }
                    },
                    "else": {
                      "properties": {
                        "levels": {
                          "type": "null"
                        },
                        "categories": {
                          "type": "null"
                        }
                      },
                      "if": {
                        "properties": {
                          "type": {
                            "const": "team"
                          }
                        }
                      },
                      "then": {
                        "required": [
                          "teamId"
                        ],
                        "properties": {
                          "teamId": {
                            "title": "チームID",
                            "description": "チームID",
                            "type": ["string", "integer"]
                          }
                        }
                      },
                      "else": {
                        "properties": {
                          "teamId": {
                            "type": "null"
                          }
                        }
                      }
                    }
                  }
                },
                "parentId": {
                  "title": "親ノードID",
                  "description": "親ノードID",
                  "type": ["integer", "string"],
                  "examples": [
                    "router_a"
                  ]
                },
                "layoutOptions": {
                  "$ref": "layoutOptions"
                },
                "nodes": {
                  "$ref": "nodeObject"
                }
              }
            }
          }
        }
      }
    }
  }
}

